/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,600,300')

/*
 * Nib provides a CSS reset
 */
global-reset()

body
   font-family 'Open Sans'
   background #4183D7
   color white
   
#container
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  display flex
  overflow auto
   
.btn
  width 200px
  height 50px
  background #fff 
  color #202020
  font-size 20px
  border 0px solid
  margin-top 10px
  margin-bottom 10px
  margin-left 20px
  &:hover
    background #202020
    color #fff
    transition 0.15s
  
.play-btn
  width 100px
  height 25px
  font-size 14px
  opacity 0.9
  border-radius 3%


td
  width 30%
  height 30px
   
.wrap
  white-space nowrap
  
.line
  display inline-block
  
.top
  vertical-align top
  position fixed
  margin-top 20px
  
.table
  margin-left 260px
  margin-top 10px

.player
  margin-left 260px

  
.stop-btn
  position fixed
  left 825px
  top 20px
  width 100px
  height 30px
  border-radius 3%
  z-index 2
  
  
input[type=range] {
  -webkit-appearance: none;
  width: 500px;
}

input[type=range]:focus {
  outline: none;
}

input[type=range]::-webkit-slider-runnable-track {
  width: 100%;
  height: 11px;
  cursor: pointer;
  animate: 0.2s;
  background: #202020;
  border: 0px solid #000000;
}

input[type=range]::-webkit-slider-thumb {
  box-shadow: 0px 0px 0px #000000;
  border: 0px solid #000000;
  height: 9px;
  width: 15px;
  background: #529DE1;
  cursor: pointer;
  -webkit-appearance: none;
  margin-top: 0.5px;
}

input[type=range]:focus::-webkit-slider-runnable-track {
  background: #202020;
}

.progress-bar
  position fixed
  left 260px
  top 40px
  z-index 2

.player-holder
  background #4183D7
  height 90px
  width 100%
  position fixed
  left 260px
  top 0px
  z-index 2
  
