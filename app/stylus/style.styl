/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,600,300')

/*
 * Nib provides a CSS reset
 */
global-reset()

body
   font-family 'Open Sans'
   background #fff
   color #707070
   
#container
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  display flex
  overflow auto
   
.btn
  width 200px
  height 70px
  background rgba(255,255,255,0.5)
  color #202020
  font-size 16px
  border 0px solid
  &:hover
    background #202020
    color #fff
    transition 0.2s
    font-size 18px
  &:focus
     outline 0 
     box-shadow none 
  
