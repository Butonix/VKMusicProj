.container
  position fixed
  width 100%
  height 100%
  overflow hidden

.overlay
  position absolute
  top 0
  left 0
  z-index 2
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.2)
  display flex
  align-items center
  justify-content center
  overflow auto

.button
  display block
  padding 15px 30px
  font-size 16px
  border none
  background rgba(255, 255, 255, 0.8)
  color #202020
  cursor pointer
  &:hover
    font-size 18px
    transition 0.2s
  &:focus
    outline none

video
  height: 100vh
