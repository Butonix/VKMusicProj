@import './variables';

.container
  position fixed
  width 100%
  height 100%
  overflow hidden

.overlay
  position absolute
  top 0
  left 0
  z-index 2
  width 100%
  height 100%
  background rgba(255, 255, 255, 0.2)
  display flex
  align-items center
  justify-content center
  overflow auto

.btnContainer {
  text-align: center;
}

.button
  display block
  padding 10px 30px
  margin 10px auto
  font-size 16px
  line-height 2
  border none
  background $brand-primary
  color $brand-white
  cursor pointer
  border-radius 4px
  box-shadow 0 0 5px rgba(0, 0, 0, 0.2);
  &:hover
    background $brand-primary-dark
    transition 0.25s
  &:focus
    outline none

video
  height: 100vh
